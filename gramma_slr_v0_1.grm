"Name"    = 'abm--'
"Version" = '1.0 beta'
"Author"  = 'Artur Bernardo Mallmann'

"About"   = 'This is a test declaration.'
          | 'You can use multiple lines by using the "pipe" symbol'

"Case Sensitive" = 'True'
"Start Symbol" = <lib>
Identifier = {Letter}{AlphaNumeric}*
num = {Number}+|'-'{Number}+

<id> ::= Identifier
<ar> ::= '+' | '-' | or
<ap> ::= '*' | '/' | '%' | and
<e> ::= <e> <ar> <t> 
     | <t>
<t> ::= <t> <ap> <f> 
     | <f>
<f> ::= '(' <e> ')'
     | <id> 
     | num 
<opl> ::= <e> '!=' <e>
       | <e> '==' <e>
       | <e> '<' <e>
       | <e> '>' <e>
<cond> ::= if <opl> <stm> else <stm>
<attr> ::= <id> '=' <e>
        | <id> '=' <opl>
<loop> ::= loop'('<opl>')'<stm>
        |loop <stm>'('<opl>')'
<com> ::= <loop>
       | <cond>
       | <attr>';'
       |<function>
<lib> ::= <function><lib>
       |''
<stm> ::= '{'<stm_>
       | <com>
       |return <opl>';'
       |return <e>';'
<stm_> ::= <com><stm_> | '}'
        | return <opl>';''}'
        |return <e> ';''}'
<function> ::= function <id> '('<param> <stm>
<param> ::= <id>')' |')'
         | <id>','<param>
