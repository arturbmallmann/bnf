"Name"    = 'abm--'
"Version" = '1.0 beta'
"Author"  = 'Artur Bernardo Mallmann'

"About"   = 'This is a test declaration.'
          | 'You can use multiple lines by using the "pipe" symbol'

"Case Sensitive" = 'True'
"Start Symbol" = <lib>

<ar> ::= '+' | '-' | OR
<ap> ::= '*' | '/' | '%' | AND
<e> ::= <e> <ar> <t> 
     | <t>
<t> ::= <t> <ap> <f> 
     | <f>
<f> ::= '(' <e> ')'
     | ID 
     | NUM 
<opl> ::= <e> '!=' <e>
       | <e> '==' <e>
       | <e> '<' <e>
       | <e> '>' <e>
<cond> ::= IF <opl> <stm> ELSE <stm>
<attr> ::= ID '=' <e>
        | ID '=' <opl>
<loop> ::= LOOP'('<opl>')'<stm>
        |LOOP <stm>'('<opl>')'
<com> ::= <loop>
       | <cond>
       | <attr>';'
       |<function>
<lib> ::= <function><lib>
       |<function>
       |''
<stm> ::= '{'<stm_>
       | <com>
       |RETURN <opl>';'
       |RETURN <e>';'
<stm_> ::= <com><stm_> | '}'
        |RETURN <opl>';''}'
        |RETURN <e> ';''}'
<function> ::= FUNCTION ID '('<param> <stm>
<param> ::= ID')' |')'
         | ID ',' <param>
